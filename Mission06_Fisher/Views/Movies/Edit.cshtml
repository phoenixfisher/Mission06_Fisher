@model Mission06_Fisher.Models.Movie

@{
    ViewBag.Title = "Edit Movie";
    Layout = "_Layout";
}

<h2>Edit Movie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MovieId" />
    
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    
    <div>
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" min="1888" />
    </div>
    
    <div>
        <label asp-for="Edited"></label>
        <input asp-for="Edited" type="checkbox" />
    </div>
    
    <div>
        <label asp-for="CopiedToPlex"></label>
        <input asp-for="CopiedToPlex" type="checkbox" />
    </div>
    
    <div>
        <label asp-for="Notes"></label>
        <input asp-for="Notes" maxlength="25" />
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
