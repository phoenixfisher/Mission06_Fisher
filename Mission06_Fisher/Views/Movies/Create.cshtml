@model Mission06_Fisher.Models.Movie

<h2>Add Movie</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label>Year</label>
        <input asp-for="Year" type="number" min="1888" />
        <span asp-validation-for="Year"></span>
    </div>

    <div>
        <label>Edited</label>
        <input asp-for="Edited" type="checkbox" />
        <span asp-validation-for="Edited"></span>
    </div>

    <div>
        <label>Copied To Plex</label>
        <input asp-for="CopiedToPlex" type="checkbox" />
        <span asp-validation-for="CopiedToPlex"></span>
    </div>

    <div>
        <label>Notes (max 25 chars)</label>
        <input asp-for="Notes" maxlength="25" />
        <span asp-validation-for="Notes"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
