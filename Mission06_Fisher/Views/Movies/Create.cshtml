@model Movie
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Add Movie</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Category</label>
        <select asp-for="CategoryId" asp-items='@(new SelectList(ViewBag.Categories, "Id", "Name"))'></select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div>
        <label>Title</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label>Year</label>
        <input asp-for="Year" />
        <span asp-validation-for="Year"></span>
    </div>

    <div>
        <label>Director</label>
        <select asp-for="DirectorId" asp-items='@(new SelectList(ViewBag.Directors, "Id", "Name"))'></select>
        <span asp-validation-for="DirectorId"></span>
    </div>

    <div>
        <label>Rating</label>
        <select asp-for="Rating">
            <option value="">--Select--</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating"></span>
    </div>

    <div>
        <label>Edited</label>
        <input asp-for="Edited" type="checkbox" />
        <span asp-validation-for="Edited"></span>
    </div>

    <div>
        <label>Lent To</label>
        <input asp-for="LentTo" />
        <span asp-validation-for="LentTo"></span>
    </div>

    <div>
        <label>Notes (max 25 chars)</label>
        <input asp-for="Notes" maxlength="25" />
        <span asp-validation-for="Notes"></span>
    </div>

    <button type="submit">Add Movie</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
