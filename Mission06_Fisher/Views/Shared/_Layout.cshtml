<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Joel Hilton Film Collection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Joel Hilton Films</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
                <a class="nav-link" asp-controller="Movies" asp-action="Create">Add</a>
                <a class="nav-link" asp-controller="Home" asp-action="GetToKnowJoel">Get to Know Joel</a>
            </div>
        </div>
    </nav>
</header>

<main class="container pb-3">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Joel Hilton Film Collection
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
